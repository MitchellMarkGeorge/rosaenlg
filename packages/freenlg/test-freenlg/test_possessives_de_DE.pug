mixin produkt_ref(obj, params)
  | die Gurke
  - setRefGender(obj, 'F');

mixin produkt_refexpr(obj, params)
  synz
    syn
      | dieses Telefon
      - setRefGender(PRODUKT, 'N');
    syn
      | dieses Handy
      - setRefGender(PRODUKT, 'N');
    syn
      | diese Gurke
      - setRefGender(PRODUKT, 'F');

t
  -
    var PRODUKT = {};
    PRODUKT.ref = 'produkt_ref';
    PRODUKT.refexpr = 'produkt_refexpr';

  singular
    - setRefNumber(PRODUKT, 'S');
    li 
      //- Durchmesser m, Gewicht n, Farbe f
      | WITH REF BEFORE : #[+value(PRODUKT)] / 
      | #[+thirdPossession(PRODUKT, 'Durchmesser')] / 
      | #[+thirdPossession(PRODUKT, 'Gewicht')] / 
      | #[+thirdPossession(PRODUKT, 'Farbe')]

