    if isSentenceStart()
      | isStart
    else
      | isNotStart
  l bla #{''}
    if isSentenceStart()
      | isStart
    else
      | isNotStart
  l #[+flushBuffer] #{ isSentenceStart() ? 'isStart' : 'isNotStart' }
  l bla bla bla #[+flushBuffer] #{ isSentenceStart() ? 'isStart' : 'isNotStart' }






