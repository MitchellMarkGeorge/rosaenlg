    '<t>',
    '<l>start. IsStart</l>',
    '<l>start. IsStart</l>',
    '<l>bla isNotStart</l>',
    '<l>isStart</l>',
    '<l>bla bla bla isNotStart</l>',
    '</t>'
  ].join('');


t
  l start . #[+flushBuffer] #{ isSentenceStart() ? 'isStart' : 'isNotStart' }
