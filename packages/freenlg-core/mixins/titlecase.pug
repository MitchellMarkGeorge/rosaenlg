
mixin titlecase(title, params)
  case util.language
    when 'en_US'
      if !hasFlag(params, 'LAX')
        | #{ protectString( util.toTitleCase(title) ) }
      else
        | #{ protectString( util.toTitleCase.toLaxTitleCase(title) ) }
    when 'fr_FR'
      | #{ protectString( util.titleCaseFrench.convert(title) ) }




