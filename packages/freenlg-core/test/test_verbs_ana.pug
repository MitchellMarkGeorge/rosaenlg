
include ../mixins/main

-
  util.expected = [
    '<t>',
      '<l>REF_M est luxueux / ANA_F est luxueuse</l>',
      '<l>REF_M est luxueux / REF_M est luxueux</l>',
    '</t>'
  ].join('');


mixin produit_ref(obj, params)
  | REF_M
  - setRefGender(obj, 'M');

mixin produit_ana(obj, params)
  | ANA_F
  - setRefGender(obj, 'F');

t
  -
    var PRODUIT = {};
    PRODUIT.ref = 'produit_ref';
    PRODUIT.ana = 'produit_ana'

  l #[+subjectVerbAdj(PRODUIT, 'être', 'luxueux')] / #[+subjectVerbAdj(PRODUIT, 'être', 'luxueux')]
  - resetRep(PRODUIT);
  l #[+subjectVerbAdj(PRODUIT, 'être', 'luxueux')] / #[+subjectVerbAdj(PRODUIT, 'être', 'luxueux', {REPRESENTANT:'ref'})]
