include ../mixins/main


-
  util.expected = [
    '<t>',
      '<l>add1 add2 add3 6 / add1 add2 add3 12 / add1 add2 add3 18</l>',
    '</t>'
  ].join('');



mixin listOfStuff
  itemz {separator: ' '}
    item
      | add1
      - util.has_said['TEST'] += 1;
    item
      | add2
      - util.has_said['TEST'] += 2;
    item
      | add3
      - util.has_said['TEST'] += 3;

mixin helper
  | #[+listOfStuff] #{util.has_said['TEST']}

t
  - util.has_said['TEST'] = 0;
  l #[+helper] / #[+helper] / #[+helper]
  - deleteSaid('TEST');

